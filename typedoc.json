{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "./src/index.ts",
  ],
  "out": "docs/api",
  "plugin": [
    "typedoc-plugin-markdown"
  ],
  "watch": false,
  "excludeExternals": true,
  "excludePrivate": true,
  "excludeInternal": true,
  "readme": "none",
  "categorizeByGroup": true,
  "disableSources": true,
  "cleanOutputDir": true,
  "navigation": {
    "includeGroups": true,
    "includeCategories": true
  },
  "validation": {
    "notExported": true,
    "invalidLink": true,
    "notDocumented": false
  }
}
